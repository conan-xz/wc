/* pages/astrology-input/astrology-input.wxss */

.page-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.picker {
  width: 100%;
  padding: 20rpx 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  background: #fff;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.time-warning {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  padding: 12rpx 16rpx;
  background: #fff8e8;
  border-radius: 8rpx;
}

.warning-icon {
  margin-right: 8rpx;
}

.warning-text {
  font-size: 24rpx;
  color: #f39c12;
}

.location-input-wrapper {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.form-input {
  flex: 1;
  padding: 20rpx 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
  box-sizing: border-box;
}

.search-btn {
  padding: 20rpx 32rpx;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.city-results {
  margin-top: 20rpx;
  max-height: 400rpx;
  overflow-y: auto;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.city-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.city-item:last-child {
  border-bottom: none;
}

.city-info {
  flex: 1;
}

.city-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.city-detail {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.city-coords {
  text-align: right;
}

.coords-text {
  font-size: 22rpx;
  color: #666;
}

.selected-location {
  margin-top: 20rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.location-info {
  display: flex;
  align-items: center;
}

.location-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.location-detail {
  flex: 1;
}

.location-city {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.location-coords {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.timezone-display {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.timezone-name {
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #666;
}

.history-list {
  max-height: 500rpx;
  overflow-y: auto;
}

.history-item {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.history-info {
  display: flex;
  flex-direction: column;
}

.history-date,
.history-time,
.history-location {
  font-size: 26rpx;
  color: #333;
}

.history-time {
  color: #666;
}

.history-location {
  color: #999;
}

/* 按钮样式 */
.btn {
  display: block;
  width: 100%;
  padding: 24rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  box-sizing: border-box;
  cursor: pointer;
}

.btn-primary {
  background: #07c160;
  color: #fff;
}

.btn-block {
  display: block;
  width: 100%;
}

.btn-large {
  padding: 32rpx;
  font-size: 36rpx;
}